<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd ">

    <dubbo:application name="wan-cms-rpc-service"/>

    <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"/>

    <dubbo:protocol name="dubbo" port="20880"/>

    <!-- 文章 -->
    <bean id="cmsArticleServiceImpl" class="com.wan.cms.rpc.server.impl.CmsArticleServiceImpl"/>
    <dubbo:service interface="com.wan.cms.rpc.api.CmsArticleService" ref="cmsArticleServiceImpl"/>

    <!-- 类目 -->
    <bean id="cmsCategoryServiceImpl" class="com.wan.cms.rpc.server.impl.CmsCategoryServiceImpl"/>
    <dubbo:service interface="com.wan.cms.rpc.api.CmsCategoryService" ref="cmsCategoryServiceImpl"/>

    <!-- 评论 -->
    <bean id="cmsCommentServiceImpl" class="com.wan.cms.rpc.server.impl.CmsCommentServiceImpl"/>
    <dubbo:service interface="com.wan.cms.rpc.api.CmsCommentService" ref="cmsCommentServiceImpl"/>

    <!-- 标签 -->
    <bean id="cmsTagServiceImpl" class="com.wan.cms.rpc.server.impl.CmsTagServiceImpl"/>
    <dubbo:service interface="com.wan.cms.rpc.api.CmsTagService" ref="cmsTagServiceImpl"/>

    <!-- 用户 -->
    <bean id="userServiceImpl" class="com.wan.cms.rpc.server.impl.UserServiceImpl"/>
    <dubbo:service interface="com.wan.cms.rpc.api.CmsUserService" ref="userServiceImpl"/>

</beans>