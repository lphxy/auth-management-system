<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd ">

    <dubbo:application name="wan-cms-server"/>

    <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"/>

    <!-- 订阅服务 -->
    <dubbo:consumer check="false" />

    <dubbo:reference id="cmsArticleService" interface="com.wan.cms.rpc.api.CmsArticleService" />

    <dubbo:reference id="cmsCategoryService" interface="com.wan.cms.rpc.api.CmsCategoryService" />

    <dubbo:reference id="cmsCommentService" interface="com.wan.cms.rpc.api.CmsCommentService" />

    <dubbo:reference id="cmsTagService" interface="com.wan.cms.rpc.api.CmsTagService" />

    <dubbo:reference id="userService" interface="com.wan.cms.rpc.api.CmsUserService" />

</beans>